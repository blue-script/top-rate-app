{
  "extends": [
    "stylelint-config-standard",
    "stylelint-order-config-standard"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "indentation": [2],
    "color-hex-case": "upper",
    "color-hex-length": "long",
    "order/properties-order": [
      [
        {
          "properties": [
            "all"
          ],
          "emptyLineBefore": "never"
        },
        {
          "unspecified": "bottomAlphabetical"
        }
      ]
    ]
  }
}